<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="build" name="ADDIS">
	<property environment="env"/>
	<property name="junit.output.dir" value="junit"/>
	<property name="debuglevel" value="source,lines,vars"/>
	<property name="target" value="1.5"/>
	<property name="source" value="1.5"/>
	<property name="aspectjtools" location="lib/aspectj/aspectjtools.jar"/>

	<path id="aspect.path">
		<pathelement location="lib/contract4j/contract4j5.jar"/>
	</path>

	<path id="build.classpath">
		<pathelement location="lib/jgoodies/binding-2.0.6.jar"/>
		<pathelement location="lib/jgoodies/forms-1.2.1.jar"/>
		<pathelement location="lib/jgoodies/looks-2.2.1.jar"/>
		<pathelement location="lib/junit/junit-4.6.jar"/>
		<pathelement location="lib/junit/junit-dep-4.6.jar"/>
		<pathelement location="lib/easymock/easymock.jar"/>
		<pathelement location="lib/contract4j/contract4j5.jar"/>
	</path>

	<path id="ADDIS.classpath">
		<pathelement location="bin"/>
		<path refid="build.classpath" />
		<!-- <fileset dir="lib/contract4j" /> -->
		<!-- <pathelement location="lib/aspectj/aspectjrt.jar"/> -->
	</path>

	<path id="contract4j.classpath">
		<fileset dir="lib/contract4j" />
		<pathelement location="lib/aspectj/aspectjrt.jar"/>
	</path>

	<path id="dist.class.path">
		<path refid="build.classpath" />
		<path refid="contract4j.classpath" />
	</path>

	<pathconvert property="dist-class-path" pathsep=" " dirsep="/">
		<path refid="dist.class.path" />
		<map from="${basedir}" to="." />		
	</pathconvert>

	<taskdef classpath="${aspectjtools}"
		resource="org/aspectj/tools/ant/taskdefs/aspectjTaskdefs.properties" />

	<target name="dist" depends="build">
		<delete dir="dist" />
		<mkdir dir="dist" />
		<mkdir dir="dist/lib" />
		<copy todir="dist/lib" includeemptydirs="false">
			<!-- <path refid="dist.class.path" /> -->
			<fileset dir="lib" />
		</copy>

		<jar destfile="dist/addis.jar" basedir="bin">
			<manifest>
				<attribute name="Main-Class" value="nl.rug.escher.addis.gui.Main" />
				<attribute name="Class-Path" value="${dist-class-path}" />
			</manifest>
		</jar>
	</target>

	<target name="init">
		<mkdir dir="bin"/>
		<copy includeemptydirs="false" todir="bin">
			<fileset dir="src" excludes="**/*.launch, **/*.java"/>
		</copy>
	</target>
	<target name="clean">
		<delete dir="bin"/>
		<delete dir="junit"/>
	</target>
	<target depends="clean" name="cleanall"/>
	<target depends="build-subprojects,build-project" name="build"/>
	<target name="build-subprojects"/>
	<target depends="weave-project" name="build-project">
	</target>
	<target depends="init" name="compile-project">
		<echo message="${ant.project.name}: ${ant.file}"/>
		<javac debug="true" debuglevel="${debuglevel}" destdir="bin" source="${source}" target="${target}">
			<src path="src"/>
			<classpath refid="ADDIS.classpath"/>
		</javac>
	</target>
	<target depends="compile-project" name="weave-project">
		<iajc debug="true" inPath="bin" debugLevel="${debuglevel}" source="${source}" target="${target}"
			aspectpathref="aspect.path" destDir="bin">
			<classpath>
				<path refid="ADDIS.classpath" />
				<path refid="contract4j.classpath" />
			</classpath>
		</iajc>
	</target>
	<target name="test" depends="build">
		<mkdir dir="${junit.output.dir}"/>
		<junit fork="yes" printsummary="withOutAndErr" haltonfailure="false">
			<formatter type="xml"/>
			<classpath>
				<path refid="ADDIS.classpath"/>
				<path refid="contract4j.classpath" />
			</classpath>
			<batchtest todir="${junit.output.dir}">
				<fileset dir="bin/">
					<include name="**/*test/*Test.class"/>
				</fileset>
			</batchtest>
		</junit>
	</target>
	<target name="Main">
		<java classname="nl.rug.escher.gui.Main" failonerror="true" fork="yes">
			<classpath refid="ADDIS.classpath"/>
		</java>
	</target>
	<target name="junitreport">
		<junitreport todir="${junit.output.dir}">
			<fileset dir="${junit.output.dir}">
				<include name="TEST-*.xml"/>
			</fileset>
			<report format="frames" todir="${junit.output.dir}"/>
		</junitreport>
	</target>
</project>
