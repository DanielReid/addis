<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="build" name="ADDIS">
	<property environment="env"/>
	<property name="junit.output.dir" value="junit"/>
	<property name="debuglevel" value="source,lines,vars"/>
	<property name="target" value="1.5"/>
	<property name="source" value="1.5"/>
	<path id="ADDIS.classpath">
		<pathelement location="bin"/>
		<pathelement location="lib/jgoodies/binding-2.0.6.jar"/>
		<pathelement location="lib/jgoodies/forms-1.2.1.jar"/>
		<pathelement location="lib/jgoodies/looks-2.2.1.jar"/>
		<pathelement location="lib/junit/junit-4.6.jar"/>
		<pathelement location="lib/junit/junit-dep-4.6.jar"/>
		<pathelement location="lib/easymock/easymock.jar"/>
		<pathelement location="lib/db4o/db4o-7.4.88.12908-java5.jar"/>
		<pathelement location="lib/datanucleus/datanucleus-core-1.1.2.jar"/>
		<pathelement location="lib/datanucleus/datanucleus-db4o-1.1.1.jar"/>
		<pathelement location="lib/datanucleus/jdo2-api-2.3-SNAPSHOT.jar"/>
		<pathelement location="src/datanucleus.properties"/>
		<pathelement location="src/datanucleus.test.properties"/>
		<pathelement location="lib/datanucleus/log4j-1.2.8.jar"/>
	</path>
	<path id="ADDIS.enhancer.classpath">
		<path refid="ADDIS.classpath" />
		<pathelement location="lib/datanucleus-enhancer/asm-3.1.jar"/>
		<pathelement location="lib/datanucleus-enhancer/datanucleus-enhancer-1.1.2.jar"/>
	</path>
	<taskdef name="nucleusenhancer"
		classpathref="ADDIS.enhancer.classpath" 
		classname="org.datanucleus.enhancer.tools.EnhancerTask" />
	<target name="init">
		<mkdir dir="bin"/>
		<copy includeemptydirs="false" todir="bin">
			<fileset dir="src" excludes="**/*.launch, **/*.java"/>
		</copy>
	</target>
	<target name="clean">
		<delete dir="bin"/>
		<delete dir="junit"/>
	</target>
	<target depends="clean" name="cleanall"/>
	<target depends="build-subprojects,build-project" name="build"/>
	<target name="build-subprojects"/>
	<target depends="enhance-project" name="build-project">
	</target>
	<target depends="init" name="compile-project">
		<echo message="${ant.project.name}: ${ant.file}"/>
		<javac debug="true" debuglevel="${debuglevel}" destdir="bin" source="${source}" target="${target}">
			<src path="src"/>
			<classpath refid="ADDIS.classpath"/>
		</javac>
	</target>
	<target depends="compile-project" name="enhance-project">
		<nucleusenhancer classpathref="ADDIS.enhancer.classpath">
			<fileset dir="bin">
				<include name="**/*.class" />
			</fileset>
		</nucleusenhancer>
	</target>
	<target name="test" depends="build">
		<mkdir dir="${junit.output.dir}"/>
		<junit fork="yes" printsummary="withOutAndErr" haltonfailure="false">
			<formatter type="xml"/>
			<classpath refid="ADDIS.classpath"/>	
			<batchtest todir="${junit.output.dir}">
				<fileset dir="bin/">
					<include name="**/*test/*Test.class"/>
				</fileset>
			</batchtest>
		</junit>
	</target>
	<target name="Main">
		<java classname="nl.rug.escher.gui.Main" failonerror="true" fork="yes">
			<classpath refid="ADDIS.classpath"/>
		</java>
	</target>
	<target name="junitreport">
		<junitreport todir="${junit.output.dir}">
			<fileset dir="${junit.output.dir}">
				<include name="TEST-*.xml"/>
			</fileset>
			<report format="frames" todir="${junit.output.dir}"/>
		</junitreport>
	</target>
</project>
